<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ADSR Knobs at the Top -->
    <LinearLayout
        android:id="@+id/adsrKnobContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Attack Knob -->
        <com.rejowan.rotaryknob.RotaryKnob
            android:id="@+id/attackKnob"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            app:border_color="#dddddd"
            app:border_width="6dp"
            app:circle_color="#ffffff"
            app:circle_style="solid"
            app:current_progress="10"
            app:indicator_color="#8062D6"
            app:indicator_style="line"
            app:indicator_size="15dp"
            app:label_text="Attack"
            app:label_text_color="#8062D6"
            app:label_text_size="20sp"
            app:label_text_style="bold"
            app:max="255"
            app:min="0"
            app:progress_color="#777777"
            app:progress_filled_color="#8062D6"
            app:progress_style="line"
            app:show_border="true"
            app:show_label="true"
            app:show_progress_text="true"
            app:progress_text_size="16sp"
            app:progress_text_style="bold"
            app:label_margin="16dp"
            app:suffix_text="ms"
            app:suffix_text_color="#8062D6"
            app:suffix_text_size="10sp" />

        <!-- Decay Knob -->
        <com.rejowan.rotaryknob.RotaryKnob
            android:id="@+id/decayKnob"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            app:border_color="#dddddd"
            app:border_width="6dp"
            app:circle_color="#ffffff"
            app:circle_style="solid"
            app:current_progress="10"
            app:indicator_color="#8062D6"
            app:indicator_style="line"
            app:indicator_size="15dp"
            app:label_text="Decay"
            app:label_text_color="#8062D6"
            app:label_text_size="20sp"
            app:label_text_style="bold"
            app:max="255"
            app:min="0"
            app:progress_color="#777777"
            app:progress_filled_color="#8062D6"
            app:progress_style="line"
            app:show_border="true"
            app:show_label="true"
            app:show_progress_text="true"
            app:progress_text_size="16sp"
            app:progress_text_style="bold"
            app:label_margin="16dp"
            app:suffix_text="ms"
            app:suffix_text_color="#8062D6"
            app:suffix_text_size="10sp" />

        <!-- Sustain Knob -->
        <com.rejowan.rotaryknob.RotaryKnob
            android:id="@+id/sustainKnob"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            app:border_color="#dddddd"
            app:border_width="6dp"
            app:circle_color="#ffffff"
            app:circle_style="solid"
            app:current_progress="10"
            app:indicator_color="#8062D6"
            app:indicator_style="line"
            app:indicator_size="15dp"
            app:label_text="Sustain"
            app:label_text_color="#8062D6"
            app:label_text_size="20sp"
            app:label_text_style="bold"
            app:max="255"
            app:min="0"
            app:progress_color="#777777"
            app:progress_filled_color="#8062D6"
            app:progress_style="line"
            app:show_border="true"
            app:show_label="true"
            app:show_progress_text="true"
            app:progress_text_size="16sp"
            app:progress_text_style="bold"
            app:label_margin="16dp"
            app:suffix_text="%"
            app:suffix_text_color="#8062D6"
            app:suffix_text_size="10sp" />

        <!-- Release Knob -->
        <com.rejowan.rotaryknob.RotaryKnob
            android:id="@+id/releaseKnob"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            app:border_color="#dddddd"
            app:border_width="6dp"
            app:circle_color="#ffffff"
            app:circle_style="solid"
            app:current_progress="10"
            app:indicator_color="#8062D6"
            app:indicator_style="line"
            app:indicator_size="15dp"
            app:label_text="Release"
            app:label_text_color="#8062D6"
            app:label_text_size="20sp"
            app:label_text_style="bold"
            app:max="255"
            app:min="0"
            app:progress_color="#777777"
            app:progress_filled_color="#8062D6"
            app:progress_style="line"
            app:show_border="true"
            app:show_label="true"
            app:show_progress_text="true"
            app:progress_text_size="16sp"
            app:progress_text_style="bold"
            app:label_margin="16dp"
            app:suffix_text="ms"
            app:suffix_text_color="#8062D6"
            app:suffix_text_size="10sp" />
    </LinearLayout>
    <!-- PianoView -->
    <com.convergencelabstfx.pianoview.PianoView
        android:id="@+id/pianoView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/adsrKnobContainer"
        app:layout_constraintBottom_toTopOf="@id/octaveControlContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:numberOfKeys="24"
        app:enableMultiKeyHighlighting="true"
        app:keyPressedColor="#673AB7"
        app:whiteKeyColor="@color/whiteKeyColor"
        app:blackKeyColor="@color/blackKeyColor"
        app:keyStrokeColor="@color/keyStrokeColor"
        app:keyCornerRadius="2dp"
        app:keyStrokeWidth="1dp" />

    <!-- Add this between the piano view and the knob container -->
    <LinearLayout
        android:id="@+id/octaveControlContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/pianoView"
        app:layout_constraintBottom_toTopOf="@id/knobContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/octaveDownButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- OCT"
            android:textSize="16sp"
            app:iconSize="48dp"/>

        <TextView
            android:id="@+id/octaveTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Octave: 5"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_gravity="center_vertical"/>

        <Button
            android:id="@+id/octaveUpButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ OCT"
            android:textSize="16sp"
            app:iconSize="48dp"/>
    </LinearLayout>


    <!-- Filter and Detune Knobs -->
    <LinearLayout
        android:id="@+id/knobContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/pianoView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Filter Knob -->

        <Button
            android:id="@+id/panicButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Stop all notes" />

        <com.rejowan.rotaryknob.RotaryKnob
            android:id="@+id/filterKnob"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            app:border_color="#dddddd"
            app:border_width="6dp"
            app:circle_color="#ffffff"
            app:circle_style="solid"
            app:current_progress="10"
            app:indicator_color="#8062D6"
            app:indicator_style="line"
            app:indicator_size="15dp"
            app:label_text="Filter"
            app:label_text_color="#8062D6"
            app:label_text_size="20sp"
            app:label_text_style="bold"
            app:label_margin="16dp"
            app:max="255"
            app:min="0"
            app:progress_color="#777777"
            app:progress_filled_color="#8062D6"
            app:progress_style="line"
            app:show_border="true"
            app:show_label="true"
            app:show_progress_text="true"
            app:progress_text_size="16sp"
            app:progress_text_style="bold"
            app:suffix_text="Hz"
            app:suffix_text_color="#8062D6"
            app:suffix_text_size="10sp" />

        <!-- Detune Knob -->
        <com.rejowan.rotaryknob.RotaryKnob
            android:id="@+id/detuneKnob"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            app:border_color="#dddddd"
            app:border_width="6dp"
            app:circle_color="#ffffff"
            app:circle_style="solid"
            app:current_progress="10"
            app:indicator_color="#8062D6"
            app:indicator_style="line"
            app:indicator_size="15dp"
            app:label_text="Detune"
            app:label_text_color="#8062D6"
            app:label_text_size="20sp"
            app:label_text_style="bold"
            app:label_margin="16dp"
            app:max="255"
            app:min="0"
            app:progress_color="#777777"
            app:progress_filled_color="#8062D6"
            app:progress_style="line"
            app:show_border="true"
            app:show_label="true"
            app:show_progress_text="true"
            app:progress_text_size="16sp"
            app:progress_text_style="bold"
            app:suffix_text="ct"
            app:suffix_text_color="#8062D6"
            app:suffix_text_size="10sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>