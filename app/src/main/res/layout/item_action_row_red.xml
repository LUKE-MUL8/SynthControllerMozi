<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/red_900_50">  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <ImageView
        android:id="@+id/row_icon"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:contentDescription="@null"
        app:tint="@color/red_400" /> <TextView
    android:id="@+id/row_text"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_weight="1"
    android:textSize="16sp"
    android:textColor="@color/red_300" android:fontFamily="@font/inter"
    android:ellipsize="end"
    android:singleLine="true" />

    <ImageView
        android:id="@+id/row_chevron"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_chevron_right"
        android:contentDescription="@null"
        app:tint="@color/red_500" /> </LinearLayout>
</com.google.android.material.card.MaterialCardView>