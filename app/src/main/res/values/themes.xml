<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SynthController" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_500</item>
        <item name="colorPrimaryVariant">@color/primary_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">@color/slate_900</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowBackground">@color/slate_900</item>
    </style>

    <!-- Add to res/values/styles.xml -->
    <style name="CircleButtonStyle" parent="Widget.Material3.Button.TextButton">
        <item name="backgroundTint">@color/primary_950</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">35dp</item>
    </style>

    <style name="Theme.SynthController" parent="Base.Theme.SynthController" />

    <style name="RotaryKnobStyle">
        <item name="knob_image">@drawable/navy_blue</item>
        <item name="label_text_color">@android:color/white</item>
        <item name="progress_text_color">@android:color/white</item>
        <item name="suffix_text_color">@android:color/white</item>
        <item name="indicator_color">#FFFFFF</item>
        <item name="indicator_size">5dp</item>
        <item name="circle_color">#3C81E4</item>
        <item name="progress_filled_color">#1E88E5</item>
        <item name="progress_color">#FFFFFF</item>
        <item name="border_color">#74FF00</item>
        <item name="border_width">20dp</item>
        <item name="show_big_progress">true</item>
        <item name="big_progress_multiplier">3.0</item>
        <item name="big_progress_diff">1</item>
        <item name="show_label">true</item>
        <item name="show_progress_text">true</item>
        <item name="progress_text_size">14sp</item>
        <item name="label_text_size">12sp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="max">255</item>
        <item name="min">0</item>
        <item name="label_text_font">@font/inter</item>
        <item name="progress_text_font">@font/inter</item>
        <item name="suffix_text_font">@font/inter</item>
    </style>
</resources>
